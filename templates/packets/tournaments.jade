extends ../layout

block content
	h1 All Tournaments 
		span.label.label-important #{type} 
	hr
	a.btn(href="/new?type=#{type}") Add New Packet
	for d in clusters
		h2= d.difficulty
		p
		for t in d.tournaments
			div(style="overflow:auto; margin-bottom: 20px")
				.pull-right
					ul
						for y in t.years
							li
								a(href="/packets/#{type}/#{y}/#{encodeURIComponent(t.name)}")= y

				span(style="font-size: large")= t.name
